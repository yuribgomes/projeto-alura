import math

def calcular_area(raio):
    area = math.pi * raio ** 2
    return area

if __name__ == "__main__":
    raio = float(input("Digite o raio do círculo: "))
    area = calcular_area(raio)
    print(f"A área do círculo com raio {raio} é {area:.2f}")
